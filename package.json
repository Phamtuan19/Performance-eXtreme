{
   "private": true,
   "workspaces": [
      "packages/*",
      "preview",
      "playground"
   ],
   "scripts": {
      "install": "yarn install",
      "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
      "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
      "format": "prettier --write .",
      "format:check": "prettier --check .",
      "type-check": "tsc --build tsconfig.base.json",
      "build": "yarn workspace @px-ui/core build",
      "preview:dev": "yarn workspace preview dev",
      "playground:dev": "yarn workspace playground dev"
   },
   "devDependencies": {
      "@typescript-eslint/eslint-plugin": "^6.x.x",
      "@typescript-eslint/parser": "^6.x.x",
      "@vitejs/plugin-react": "^4.x.x",
      "eslint": "^8.x.x",
      "prettier": "^3.x.x",
      "typescript": "^5.x.x",
      "vite": "^5.x.x"
   },
   "dependencies": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "styled-components": "^6.1.13"
   },
   "version": "0.0.0"
}
