{
   "name": "@pui/monorepo",
   "private": true,
   "version": "0.0.1",
   "workspaces": [
      "packages/*",
      "preview"
   ],
   "scripts": {
      "build": "tsc --project tsconfig.build.json",
      "type-check": "tsc --build tsconfig.base.json",
      "preview:dev": "yarn workspace preview dev",
      "format": "prettier --write .",
      "fix:imports": "eslint --fix \"src/**/*.{ts,tsx}\"",
      "commitlint": "commitlint --edit",
      "format:check": "prettier . --check",
      "format:fix": "prettier . --write",
      "lint": "eslint . --max-warnings 0 --report-unused-disable-directives",
      "lint:fix": "eslint . --fix --max-warnings 0 --report-unused-disable-directives",
      "prepare": "husky install",
      "type:check": "tsc",
      "setup": "git init && husky install",
      "validate": "run-p lint type:check",
      "build:core": "yarn workspace @pui/core build",
      "build:theme": "yarn workspace @pui/theme build",
      "build:icons": "yarn workspace @pui/icons build",
      "build:components": "yarn workspace @pui/components build",
      "build:material": "yarn workspace @pui/material build",
      "build:all": "yarn build:core && yarn build:theme && yarn build:icons && yarn build:components && yarn build:material"
   },
   "devDependencies": {
      "@commitlint/cli": "^19.8.1",
      "@commitlint/config-conventional": "^19.8.1",
      "@types/node": "^20.0.0",
      "@types/react": "^19.1.6",
      "@types/react-dom": "^19.1.5",
      "@typescript-eslint/eslint-plugin": "^6.x.x",
      "@typescript-eslint/parser": "^6.x.x",
      "@vitejs/plugin-react": "^4.5.0",
      "eslint-config-prettier": "^9.1.0",
      "eslint-import-resolver-typescript": "^4.3.5",
      "eslint-plugin-import": "^2.31.0",
      "eslint-plugin-prettier": "^5.4.0",
      "eslint-plugin-react": "^7.34.1",
      "eslint-plugin-react-hooks": "^4.6.0",
      "eslint": "^8.x.x",
      "prettier": "^3.x.x",
      "typescript": "^5.x.x",
      "vite": "^5.0.0",
      "vite-tsconfig-paths": "^5.x",
      "husky": "^9.1.7"
   },
   "dependencies": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0"
   }
}
