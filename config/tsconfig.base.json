{
   "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-jsx",
      "noEmit": true,
      "resolveJsonModule": true,
      "isolatedModules": true,

      "declaration": true,
      "declarationDir": "dist/types",
      "emitDeclarationOnly": false,

      "baseUrl": ".",
      "paths": {
         "@PUI": ["../src"],
         "@PUI/*": ["../src/*"],
         "@PUI/core/*": ["../src/core/*"],
         "@PUI/components/*": ["../src/components/*"],
         "@PUI/hooks/*": ["../src/hooks/*"],
         "@PUI/types/*": ["../src/types/*"]
      },
      "types": ["vite/client"]
   },
   "include": ["../src", "../preview", "../config", "../dist", "../playground"],
   "exclude": ["node_modules", "dist"]
}
