{
   "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-jsx",
      "noEmit": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "paths": {
         "@/*": ["../src/*"],
         "@core/*": ["../src/core/*"],
         "@components/*": ["../src/components/*"],
         "@theme/*": ["../src/theme/*"],
         // "@utils/*": ["../src/utils/*"],
         "@hooks/*": ["../src/hooks/*"],
         "@icons/*": ["../src/icons/*"],
         "@types/*": ["../src/types/*"]
      },
      "types": ["vite/client"]
   },
   "include": ["../src", "../preview", "../config"],
   "exclude": ["node_modules", "dist"]
}
