{
   "extends": "../../tsconfig.json", // Kế thừa cấu hình từ file root

   "compilerOptions": {
      // Dùng lại hệ module "bundler" (phù hợp với Vite, không phải Webpack)
      "moduleResolution": "bundler",

      // Đảm bảo JSX đúng chuẩn React 17+ (phòng khi bị override)
      "jsx": "react-jsx"
   },

   // Include code chính và test (nếu có)
   "include": ["src/**/*"],

   // Loại trừ các file/types không cần khi biên dịch
   "exclude": []
}
