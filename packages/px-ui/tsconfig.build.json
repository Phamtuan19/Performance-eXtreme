{
   "extends": "../../tsconfig.json",
   "compilerOptions": {
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": false,
      "outDir": "./dist/types",
      "rootDir": "./src",
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "Node",
      "jsx": "react-jsx",
      "composite": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true
   },
   "include": ["src"],
   "exclude": ["node_modules", "dist", "**/__tests__/**"]
}
